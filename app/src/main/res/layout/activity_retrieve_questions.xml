<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetrieveQuestions">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_questions"
        android:layout_below="@+id/recycler_toolbar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/recycler_toolbar"
        layout="@layout/app_bar_layout" />

    <Button
        android:id="@+id/remove_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:text="@string/remove"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="@color/gray"/>

    <ImageView
        android:id="@+id/back_arrow_recyclerview"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_arrow"/>

    <Button
        android:id="@+id/insert_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:text="@string/insert"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="@color/gray"/>
</RelativeLayout>