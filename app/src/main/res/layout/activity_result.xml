<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <include
        android:id="@+id/result_toolbar"
        layout="@layout/app_bar_layout"/>

    <TextView
        android:id="@+id/total_ques"
        android:layout_below="@+id/result_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/total_questions" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/total_ques"
        android:layout_marginStart="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/correct_text"
        android:layout_below="@+id/total_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Correct answers" />

    <TextView
        android:id="@+id/incorrect_text"
        android:layout_below="@+id/correct_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:text="Wrong answers" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/correct_text"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/textview1"
        android:layout_marginTop="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/incorrect_text"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:text="TextView" />

</RelativeLayout>