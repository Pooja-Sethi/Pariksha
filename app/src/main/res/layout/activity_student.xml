<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherActivity">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/student_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="70dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/student_profile"
            android:src="@drawable/teacher_profile" />

        <TextView
            android:id="@+id/profile_text_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-150dp"
            android:layout_marginTop="190dp"
            android:text="@string/profile"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/give_exam_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="70dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/exam" />

        <TextView
            android:id="@+id/exam_text_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-160dp"
            android:layout_marginTop="190dp"
            android:text="@string/give_test"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discussion_icon"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="300dp"
            android:src="@drawable/discussion_icon" />

        <TextView
            android:id="@+id/discuss_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-105dp"
            android:layout_marginTop="410dp"
            android:text="@string/disscussion"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/result"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="300dp"
            android:src="@drawable/result" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="410dp"
            android:text="@string/result"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>